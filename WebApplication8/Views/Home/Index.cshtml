@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Gift of the Givers</h1>
    <p class="lead">Empowering communities through disaster relief and support. Choose an action below to get started.</p>
</div>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-heart fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Donate</h5>
                    <p class="card-text">Make a difference with your contribution to ongoing relief efforts.</p>
                    <a asp-action="Index" asp-controller="Donations" class="btn btn-primary">Donate Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-plus-circle fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Create a Project</h5>
                    <p class="card-text">Start a new relief project and rally support from the community.</p>
                    <a asp-controller="ReliefProjects" asp-action="Index" class="btn btn-success">Create Project</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Report a Disaster</h5>
                    <p class="card-text">Help us respond quickly by reporting a recent disaster event.</p>
                    <a asp-controller="Disasters" asp-action="Index" class="btn btn-warning">Report Disaster</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-hands-helping fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Volunteer</h5>
                    <p class="card-text">Join our team of volunteers and lend your skills where needed most.</p>
                    <a asp-controller="Volunteers" asp-action="Index" class="btn btn-info">Sign Up to Volunteer</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}